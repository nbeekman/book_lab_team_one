<%= provide(:title, 'Index') %>	
	<section id="booking">
	  <ul>
	    <li id="mobileReserve">Reserve A Room</li>
  		<li id="bookingForm">
    		<h2>When will you be staying with us?</h2>
    		<input type="text" placeholder="Enter destination or hotel name" />
    		<input type="text" placeholder="Arriving:" />
    		<input type="text" placeholder="Leaving:" />
